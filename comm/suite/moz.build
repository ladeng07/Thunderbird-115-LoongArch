CONFIGURE_SUBST_FILES += ["installer/Makefile"]

DIRS += [
    "base",
    "browser",
    "components",
    "editor",
    "extensions",
    "locales",
    "mailnews",
    "modules",
    "themes/classic",
    "themes/modern",
]

if CONFIG['MOZ_IRC']:
    DIRS += ['chatzilla']

if CONFIG["MAKENSISU"]:
    DIRS += ["installer/windows"]

if CONFIG["MOZ_BUNDLED_FONTS"]:
    DIRS += ["/browser/fonts"]

# app is always last as it packages up the built files on mac.
DIRS += [
    "app",
]
